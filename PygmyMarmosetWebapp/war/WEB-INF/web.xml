<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Context parameters -->

	<!-- Servlets -->
	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>edu.ycp.cs.pygmymarmoset.app.servlet.Index</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>edu.ycp.cs.pygmymarmoset.app.servlet.Login</servlet-class>
	</servlet>

	<!-- Servlet-mapping -->
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/u/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- Filters. -->
	<filter>
		<filter-name>RequireLogin</filter-name>
		<filter-class>edu.ycp.cs.pygmymarmoset.app.filter.RequireLogin</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>RequireLogin</filter-name>
		<url-pattern>/u/*</url-pattern>
	</filter-mapping>
	
	<!--
		Use the /u/index servlet as the welcome file.
		Note that most often this will result in a redirection
		to the login page, but that's fine.
	-->
	<welcome-file-list>
		<welcome-file>/u/index</welcome-file>
	</welcome-file-list>
	<!-- Listeners -->

</web-app>
